# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
max_line_length = 0

[*.{yaml,yml}]
indent_size = 2

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab
